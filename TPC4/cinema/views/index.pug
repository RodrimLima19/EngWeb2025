extends layout

block content
  style.
    .w3-card-4 {
      margin: 20px;
      box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
      transition: 0.3s;
      border-radius: 5px;
    }
    .w3-card-4:hover {
      box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
    }
    .w3-blue {
      background-color: #0073e6;
      color: white;
    }
    .w3-container {
      padding: 20px;
    }
    .w3-ul {
      list-style-type: none;
      padding: 0;
    }
    .w3-ul li {
      padding: 10px;
      border-bottom: 1px solid #ddd;
    }
    .w3-ul li:last-child {
      border-bottom: none;
    }
    a {
      color: #0073e6;
      text-decoration: none;
    }
    a:hover {
      text-decoration: underline;
    }
    footer {
      margin-top: 20px;
      padding: 10px;
      text-align: center;
    }

  .w3-card-4
    header.w3-container.w3-blue
      h1= title
    .w3-container
      h2 Dados da Uc:
      ul.w3-ul
        li Docente: #{docente}
        li Instituição: #{instituicao}

      h2 App cinematografia

      ul.w3-ul 
        li 
          a(href='/filmes') Lista de Filmes

    footer.w3-container.w3-blue
      adress Generated by EW2025 class

