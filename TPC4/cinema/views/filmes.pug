extends layout

block content
  style.
    .w3-card-4 {
      margin: 20px auto;
      max-width: 1200px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      overflow: hidden;
    }

    .w3-blue {
      background-color: #0073e6;
      color: white;
      padding: 16px;
      text-align: center;
    }

    .w3-container {
      padding: 20px;
    }

    table.w3-table-all {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    table.w3-table-all th,
    table.w3-table-all td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    table.w3-table-all th {
      background-color: #f1f1f1;
      font-weight: bold;
    }

    table.w3-table-all tr:hover {
      background-color: #f9f9f9;
    }

    ul.w3-ul {
      list-style-type: none;
      padding: 0;
      margin: 0;
    }

    ul.w3-ul li {
      padding: 4px 0;
    }

    .w3-button {
      margin: 4px;
      padding: 8px 16px;
      font-size: 14px;
      border: none;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .w3-button.w3-aqua {
      background-color: #00bcd4;
      color: white;
    }

    .w3-button.w3-aqua:hover {
      background-color: #0097a7;
    }

    .w3-round-xxlarge {
      border-radius: 24px;
    }

    footer.w3-blue {
      text-align: center;
      padding: 10px;
      font-size: 14px;
    }

  .w3-card-4
    header.w3-container.w3-blue
      h1= tit
    .w3-container
      table.w3-table-all
        tr
          th Ano
          th Título
          th Elenco
          th Géneros
          th Opções
        each f in lfilmes
          tr
            td= f.year
            td= f.title
            td
              ul.w3-ul
                each ator in f.cast
                 li
                  a(href=`/filmes/autor/${ator}`)= ator
            td
              ul.w3-ul
                each g in f.genres
                  li= g
            td
              a(href=`/filmes/edit/${f.id}`).w3-button.w3-aqua.w3-round-xxlarge Editar
              a(href=`/filmes/delete/${f.id}`).w3-button.w3-aqua.w3-round-xxlarge Eliminar

    footer.w3-container.w3-blue
      adress Generated by EW2025 class
