extends layout

block content
  style.
    .w3-card-4 {
      margin: 20px auto;
      max-width: 800px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      overflow: hidden;
    }

    .w3-blue {
      background-color: #0073e6;
      color: white;
      padding: 16px;
      text-align: center;
    }

    .w3-container {
      padding: 20px;
    }

    .w3-input {
      width: 100%;
      padding: 10px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
    }

    .w3-button {
      margin: 4px;
      padding: 8px 16px;
      font-size: 14px;
      border: none;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .w3-button.w3-aqua {
      background-color: #00bcd4;
      color: white;
    }

    .w3-button.w3-aqua:hover {
      background-color: #0097a7;
    }

    .w3-round-xxlarge {
      border-radius: 24px;
    }

  .w3-card-4
    header.w3-container.w3-blue
      h1 Editar Filme
    .w3-container
      form(action=`/filmes/update/${filme.id}`, method="POST")
        label(for="title") Título:
        input.w3-input(type="text", id="title", name="title", value=filme.title, required)

        label(for="year") Ano:
        input.w3-input(type="number", id="year", name="year", value=filme.year, required)

        label(for="cast") Elenco (separado por vírgulas):
        input.w3-input(type="text", id="cast", name="cast", value=filme.cast.join(', '), required)

        label(for="genres") Géneros (separado por vírgulas):
        input.w3-input(type="text", id="genres", name="genres", value=filme.genres.join(', '), required)

        button(type="submit").w3-button.w3-aqua.w3-round-xxlarge Atualizar Filme
        a(href="/filmes").w3-button.w3-aqua.w3-round-xxlarge Cancelar

    footer.w3-container.w3-blue
      adress Generated by EW2025 class