extends layout

block content
  style.
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap');
    body {
      font-family: 'Montserrat', sans-serif;
      background: linear-gradient(135deg, #f5f7fa 0%, #e4e8f0 100%);
      min-height: 100vh;
    }
    .header-gradient {
      background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);
      box-shadow: 0 4px 20px 0 rgba(0,0,0,0.15);
    }
    .table-container {
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 6px 30px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
    }
    .table-container:hover {
      transform: translateY(-5px);
    }
    .table-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    }
    .table-row {
      transition: all 0.3s ease;
    }
    .table-row:hover {
      background-color: #f8f9fa !important;
      transform: scale(1.01);
    }
    .footer {
      background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);
      color: white;
      padding: 15px 0;
      margin-top: 40px;
    }
    .info-box {
      background: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
      margin-bottom: 30px;
    }

  header.w3-container.header-gradient
    .w3-row
      .w3-col.s12.w3-center
        h1.w3-text-white(style="text-shadow: 1px 1px 3px rgba(0,0,0,0.3); font-weight: 700")
          i.fas.fa-microphone-alt(style="margin-right:15px; color: #FFD700") 
          | Edição #{edicao.anoEdição}

  .w3-container(style="padding: 20px 0")
    .w3-row
      .w3-col.s12.m10.offset-m1.l8.offset-l2
        .info-box
          h3.w3-text-indigo(style="font-weight: 600")
            i.fas.fa-info-circle(style="margin-right:10px")
            | Detalhes da Edição
          p
            b Identificador: 
            | #{edicao._id}
          p
            b Ano da Edição: 
            | #{edicao.anoEdição}
          p
            b País Organizador: 
            a.w3-text-indigo(href=`/paises/${edicao.organizacao}`)= edicao.organizacao
          p
            b País Vencedor: 
            a.w3-text-indigo(href=`/paises/${edicao.vencedor}`)= edicao.vencedor

        h3.w3-text-indigo(style="font-weight: 600; margin-top: 40px")
          i.fas.fa-music(style="margin-right:10px")
          | Músicas da Edição

        .table-container
          if edicao.musicas.length > 0
            table.w3-table-all.w3-hoverable
              thead
                tr.table-header.w3-text-white
                  th(style="width: 35%") Título
                  th(style="width: 35%") Intérprete
                  th(style="width: 30%") País
              tbody
                each musica in edicao.musicas
                  tr.table-row
                    td
                      if musica.link
                        a.w3-text-indigo= musica.título
                      else
                        | #{musica.título}
                    td= musica.intérprete
                    td 
                      a.w3-text-indigo(href=`/paises/${musica.país}`)= musica.país
          else
            p.w3-center Nenhuma música registrada nesta edição.

        .w3-center(style="margin-top: 30px")
          a.w3-button.w3-indigo.w3-hover-light-blue(href="/", style="border-radius: 10px")
            i.fas.fa-arrow-left(style="margin-right: 5px")
            | Voltar à Página Principal

  footer.footer.w3-center
    p(style="margin: 0")
      i.fas.fa-code(style="margin-right:5px")
      | Desenvolvido por EngWeb 2025 
      i.fas.fa-heart(style="color: #ff6b6b; margin: 0 5px")
      | com Node.js e MongoDB

  link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css")
