extends layout

block content
  style.
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap');
    body {
      font-family: 'Montserrat', sans-serif;
      background: linear-gradient(135deg, #f5f7fa 0%, #e4e8f0 100%);
      min-height: 100vh;
    }
    .header-gradient {
      background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);
      box-shadow: 0 4px 20px 0 rgba(0,0,0,0.15);
    }
    .table-container {
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 6px 30px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
    }
    .table-container:hover {
      transform: translateY(-5px);
    }
    .table-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    }
    .table-row {
      transition: all 0.3s ease;
    }
    .table-row:hover {
      background-color: #f8f9fa !important;
      transform: scale(1.01);
    }
    .year-badge {
      background-color: #4b6cb7;
      color: white;
      padding: 3px 8px;
      border-radius: 12px;
      font-size: 0.8em;
      font-weight: 600;
    }
    .pulse-animation {
      animation: pulse 2s infinite;
    }
    @keyframes pulse {
      0% { box-shadow: 0 0 0 0 rgba(75, 108, 183, 0.4); }
      70% { box-shadow: 0 0 0 10px rgba(75, 108, 183, 0); }
      100% { box-shadow: 0 0 0 0 rgba(75, 108, 183, 0); }
    }
    .hover-grow {
      transition: all 0.3s ease;
    }
    .hover-grow:hover {
      transform: scale(1.05);
    }
    .footer {
      background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);
      color: white;
      padding: 15px 0;
      margin-top: 40px;
    }

  header.w3-container.header-gradient.pulse-animation
    .w3-row
      .w3-col.s6.w3-center
        h1.w3-text-white(style="text-shadow: 1px 1px 3px rgba(0,0,0,0.3); font-weight: 700; letter-spacing: 1px")
          i.fas.fa-euro-sign(style="margin-right:15px; color: #FFD700") 
          | EUROVISÃO 2025
      .w3-col.s6.w3-right-align.w3-padding
        p.w3-text-white(style="margin:0")
          i.fas.fa-calendar-alt(style="margin-right:8px")
          span#current-date= new Date().toLocaleDateString('pt-PT', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' })

  .w3-container(style="padding: 20px 0")
    .w3-row.w3-margin-bottom
      .w3-col.s12.w3-center
        h2.w3-text-indigo(style="font-weight: 600; text-shadow: 1px 1px 2px rgba(0,0,0,0.1)")
          i.fas.fa-list-ol(style="margin-right:10px")
          | LISTA DE EDIÇÕES

    .w3-row
      .w3-col.s12.m10.offset-m1.l8.offset-l2
        .table-container
          table.w3-table-all.w3-hoverable(style="border-collapse: separate; border-spacing: 0")
            thead
              tr.table-header.w3-text-white
                th.w3-center(style="width: 15%") ID
                th.w3-center(style="width: 15%") ANO
                th(style="width: 35%") ORGANIZADOR
                th(style="width: 35%") VENCEDOR
            tbody
              each edicao in edicoes
                tr.table-row
                  td.w3-center
                    a.w3-text-indigo.hover-grow(
                      href=`/${edicao._id}`
                      style="text-decoration: none; font-weight: 600"
                    )
                      i.fas.fa-info-circle(style="margin-right:5px")
                      | #{edicao._id}
                  td.w3-center
                    span.year-badge= edicao.anoEdição
                  td
                    a.w3-text-indigo.hover-grow(
                      href=`/paises/${edicao.organizacao}`
                      style="text-decoration: none"
                    )
                      | #{edicao.organizacao}
                  td
                    a.w3-text-indigo.hover-grow(
                      href=`/paises/${edicao.vencedor}`
                      style="text-decoration: none"
                    )
                      | #{edicao.vencedor}

  footer.footer.w3-center
    p(style="margin: 0")
      i.fas.fa-code(style="margin-right:5px")
      | Desenvolvido por EngWeb 2025 
      i.fas.fa-heart(style="color: #ff6b6b; margin: 0 5px")
      | com Node.js e MongoDB

  script.
    function updateLiveDate() {
      const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
      document.getElementById('current-date').textContent = new Date().toLocaleDateString('pt-PT', options);
    }
    setInterval(updateLiveDate, 60000);

  link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css")
