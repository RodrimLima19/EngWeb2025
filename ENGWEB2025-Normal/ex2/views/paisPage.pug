extends layout

block content
  style.
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap');
    body {
      font-family: 'Montserrat', sans-serif;
      background: linear-gradient(135deg, #f5f7fa 0%, #e4e8f0 100%);
      min-height: 100vh;
    }
    .header-gradient {
      background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);
      box-shadow: 0 4px 20px 0 rgba(0,0,0,0.15);
    }
    .table-container {
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 6px 30px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
    }
    .table-container:hover {
      transform: translateY(-5px);
    }
    .table-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    }
    .table-row {
      transition: all 0.3s ease;
    }
    .table-row:hover {
      background-color: #f8f9fa !important;
      transform: scale(1.01);
    }
    .year-badge {
      background-color: #4b6cb7;
      color: white;
      padding: 3px 8px;
      border-radius: 12px;
      font-size: 0.8em;
      font-weight: 600;
    }
    .hover-grow {
      transition: all 0.3s ease;
    }
    .hover-grow:hover {
      transform: scale(1.05);
    }
    .footer {
      background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);
      color: white;
      padding: 15px 0;
      margin-top: 40px;
    }

  header.w3-container.header-gradient
    h1.w3-center.w3-text-white(style="padding: 30px 0; font-weight: 700; text-shadow: 1px 1px 3px rgba(0,0,0,0.3); letter-spacing: 1px")
      i.fas.fa-flag(style="margin-right:15px; color: #FFD700")
      | País: #{pais}

  .w3-container(style="padding: 20px 0")
    .w3-row.w3-margin-bottom
      .w3-col.s12.w3-center
        h2.w3-text-indigo(style="font-weight: 600")
          i.fas.fa-music(style="margin-right:10px")
          | Edições em que participou

    .w3-row
      .w3-col.s12.m10.offset-m1.l8.offset-l2
        .table-container
          if participou.length > 0
            table.w3-table-all.w3-hoverable
              thead
                tr.table-header.w3-text-white
                  th.w3-center ID
                  th.w3-center ANO
                  th Música
                  th Intérprete
                  th.w3-center Venceu?
              tbody
                each p in participou
                  tr.table-row
                    td.w3-center
                      a.w3-text-indigo.hover-grow(href=`/${p._id}`, style="text-decoration: none; font-weight: 600")
                        | #{p._id}
                    td.w3-center
                      span.year-badge= p.anoEdição
                    td= p.titulo
                    td= p.interprete
                    td.w3-center= p.vencedor ? 'Sim' : 'Não'
          else
            p.w3-center Nenhuma participação registrada.

    .w3-row.w3-margin-top
      .w3-col.s12.w3-center
        h2.w3-text-indigo(style="font-weight: 600")
          i.fas.fa-building(style="margin-right:10px")
          | Edições organizadas

    .w3-row
      .w3-col.s12.m10.offset-m1.l8.offset-l2
        .table-container
          if organizou.length > 0
            table.w3-table-all.w3-hoverable
              thead
                tr.table-header.w3-text-white
                  th.w3-center ID
                  th.w3-center ANO
              tbody
                each o in organizou
                  tr.table-row
                    td.w3-center
                      a.w3-text-indigo.hover-grow(href=`/${o._id}`, style="text-decoration: none; font-weight: 600")
                        | #{o._id}
                    td.w3-center
                      span.year-badge= o.anoEdição
          else
            p.w3-center Nenhuma organização registrada.

    .w3-row.w3-margin-top
      .w3-col.s12.w3-center
        a.w3-button.w3-indigo.hover-grow(href="/", style="margin-top: 20px")
          i.fas.fa-arrow-left(style="margin-right: 5px")
          | Voltar à página principal

  footer.footer.w3-center
    p(style="margin: 0")
      i.fas.fa-code(style="margin-right:5px")
      | Desenvolvido por EngWeb 2025
      i.fas.fa-heart(style="color: #ff6b6b; margin: 0 5px")
      | com Node.js e MongoDB

  link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css")
